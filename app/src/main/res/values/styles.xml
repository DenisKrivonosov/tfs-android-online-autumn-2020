<resources>
    <!-- Light application theme. -->
    <style name="AppThemeLight" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@color/colorBackgroundLT</item>
        <item name="colorPrimary">@color/colorPrimaryLT</item>
        <item name="colorOnPrimary">@color/colorOnPrimaryLT</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkLT</item>
        <item name="android:colorBackground">@color/colorBackgroundLT</item>
        <item name="cardBackgroundColor">@color/colorCardBackgroundLT</item>
        <item name="colorAccent">@color/colorAccentLT</item>
        <item name="titleTextColor">@color/titleTextColorLT</item>
        <item name="subtitleTextColor">@color/subtitleTextColorLT</item>
        <item name="android:textColor">@color/textColorPrimaryLT</item>
        <item name="android:textColorPrimary">@color/textColorPrimaryLT</item>
        <item name="android:textColorHint">@color/hintTextColorLT</item>
        <item name="postLoadingViewColor">@color/postsLoadingViewColorLT</item>
    </style>

    <!-- Dark application theme. -->
    <style name="AppThemeDark" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:windowBackground">@color/colorBackgroundDT</item>
        <item name="colorPrimary">@color/colorPrimaryDT</item>
        <item name="colorOnPrimary">@color/colorOnPrimaryDT</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkDT</item>
        <item name="android:colorBackground">@color/colorBackgroundDT</item>
        <item name="cardBackgroundColor">@color/colorCardBackgroundDT</item>
        <item name="colorAccent">@color/colorAccentDT</item>
        <item name="titleTextColor">@color/titleTextColorDT</item>
        <item name="subtitleTextColor">@color/subtitleTextColorDT</item>
        <item name="android:textColor">@color/textColorPrimaryDT</item>
        <item name="android:textColorPrimary">@color/textColorPrimaryDT</item>
        <item name="android:textColorHint">@color/hintTextColorDT</item>
        <item name="postLoadingViewColor">@color/postsLoadingViewColorDT</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

</resources>
